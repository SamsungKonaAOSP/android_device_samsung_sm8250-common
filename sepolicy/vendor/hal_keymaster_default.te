#============= hal_keymaster_default ==============
allow hal_keymaster_default dak_efs_file:dir search;
allow hal_keymaster_default dak_efs_file:file {ioctl read getattr lock map open watch watch_reads };

allow hal_keymaster_default mnt_vendor_file:dir search;
allow hal_keymaster_default sec_efs_file:dir search;

# Binder call for strongbox
allow hal_keymaster_default vendor_hal_keymaster_qti:binder call;

# Device calls
allow hal_keymaster_default vendor_sp_keymaster_device:chr_file { getattr ioctl open read write };
allow hal_keymaster_default vendor_spcom_device:chr_file { getattr open read write };
allow hal_keymaster_default vendor_skp_device:chr_file { ioctl read write getattr lock append map open watch watch_reads };

# Properties
allow hal_keymaster_default vendor_spcomlib_prop:file { getattr map open read };
allow hal_keymaster_default vendor_tee_listener_prop:file { getattr map open read };

