#============= hal_thermal_default ==============
allow hal_thermal_default vendor_sysfs_battery:dir search;
allow hal_thermal_default vendor_sysfs_battery:file { getattr open read };
allow hal_thermal_default vendor_sysfs_thermal:dir search;
allow hal_thermal_default vendor_sysfs_thermal:file { getattr open read };

allow hal_thermal_default sysfs_power:dir { ioctl read getattr lock open watch watch_reads search };
allow hal_thermal_default sysfs_power:file { ioctl read getattr lock map open watch watch_reads };
allow hal_thermal_default sysfs_power:lnk_file { ioctl read getattr lock map open watch watch_reads };
